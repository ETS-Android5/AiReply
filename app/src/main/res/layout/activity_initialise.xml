<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:id="@+id/container"
    tools:activity=".MainActivity">

    <ScrollView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:clipChildren="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <androidx.cardview.widget.CardView
                android:layout_marginTop="35dp"
                app:cardElevation="5dp"
                android:layout_marginHorizontal="35dp"
                app:cardCornerRadius="25dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv1"
                        android:gravity="center"
                        android:textSize="35sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/app_name" />
                    <TextView
                        android:id="@+id/textView"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:paddingBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Complete these steps" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="35dp"
                app:cardElevation="5dp"
                android:layout_marginHorizontal="35dp"
                app:cardCornerRadius="25dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="75dp"
                        android:layout_height="100dp"
                        android:paddingStart="25dp"
                        app:srcCompat="@drawable/ic_baseline_pending_24" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Grant storage permission" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="35dp"
                app:cardElevation="5dp"
                android:layout_marginHorizontal="35dp"
                app:cardCornerRadius="25dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="75dp"
                        android:layout_height="100dp"
                        android:paddingStart="25dp"
                        app:srcCompat="@drawable/ic_baseline_pending_24" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Install NLTK dependencies" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="35dp"
                app:cardElevation="5dp"
                android:layout_marginHorizontal="35dp"
                app:cardCornerRadius="25dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="75dp"
                        android:layout_height="100dp"
                        android:paddingStart="25dp"
                        app:srcCompat="@drawable/ic_baseline_pending_24" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Install AI module" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="35dp"
                app:cardElevation="5dp"
                android:layout_marginHorizontal="35dp"
                app:cardCornerRadius="25dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="75dp"
                        android:layout_height="100dp"
                        android:paddingStart="25dp"
                        app:srcCompat="@drawable/ic_baseline_pending_24" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Train and customise your AI" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"></LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>